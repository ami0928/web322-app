<h2>Items</h2>
<a href="/items/add" class="btn btn-success pull-right">Add Post</a>

<div class="col-md-12 table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>Item ID</th>
                <th>Title</th>
                <th>Post Date</th>
                <th>Price</th>
                <th>Category</th>
                <th>Published</th>
                <th></tr>
            </tr>
        </thead>
        <tbody>
            {{#each items}}
            <tr>
                <td>{{this.id}}</td>
                <td>{{this.title}}</td>
                <td>{{this.postDate}}</td>
                <td>{{this.price}}</td>
                <td><a href="/items?category={{this.category}}">{{this.category}}</a></td>
                <td>{{this.published}}</td>
                <td>
                <a href="/items/delete/{{id}}" class="btn btn-danger">Delete</a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>

{{#unless posts}}
<div class="col-md-12 text-center">
    <strong>{{message}}</strong>
</div>
{{/unless}}
